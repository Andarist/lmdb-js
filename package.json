{
  "name": "lmdb-store",
  "author": "Kris Zyp",
  "version": "1.6.4",
  "description": "Simple, efficient, scalable data store wrapper for LMDB",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/DoctorEvidence/lmdb-store.git"
  },
  "keywords": [
    "lmdb",
    "database",
    "mdb",
    "lightning"
  ],
  "type": "module",
  "main": "index.cjs",
  "module": "main.mjs",
  "types": "./index.d.ts",
  "tsd": {
    "directory": "test/types"
  },
  "scripts": {
    "install": "node-gyp-build",
    "recompile": "node-gyp configure && node-gyp build",
    "test": "mocha test/**.test.js --recursive && npm run test:types",
    "test2": "mocha tests -u tdd",
    "test:types": "tsd",
    "benchmark": "node --turbo-fast-api-calls ./benchmark/index.js",
    "benchmark-ll": "node ./benchmark/low-level.js"
  },
  "gypfile": true,
  "dependencies": {
    "esm": "^3.2.25",
    "msgpackr": "^1.3.7",
    "nan": "^2.14.2",
    "node-gyp-build": "^4.2.3",
    "ordered-binary": "^0.2.3",
    "weak-lru-cache": "^1.0.0"
  },
  "optionalDependencies": {
    "msgpackr": "^1.3.7"
  },
  "devDependencies": {
    "@types/node": "latest",
    "benchmark": "^2.1.4",
    "chai": "^4.3.4",
    "fs-extra": "^9.0.1",
    "jshint": "^2.12.0",
    "mocha": "^8.3.2",
    "node-gyp": "^8.0.0",
    "rimraf": "^3.0.2",
    "tsd": "^0.14.0"
  },
  "bugs": {
    "url": "https://github.com/DoctorEvidence/lmdb-store/issues"
  },
  "homepage": "https://github.com/DoctorEvidence/lmdb-store#readme",
  "directories": {
    "test": "tests"
  }
}
